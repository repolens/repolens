    "tsup": "^8.4.0",
    "typescript": "5.8.2",
    "ts-morph": "^25.0.1"
  },
  "dependencies": {
    "@repolens/github-fetcher": "workspace:*",
    "@repolens/parser": "workspace:*",
    "@repolens/parser-default": "workspace:*",
    "@repolens/parser-ts": "workspace:*",
    "@repolens/types": "workspace:*",
    "@repolens/vectorizer": "workspace:*"
  },
  "peerDependencies": {
    "ts-morph": "^25.0.1"
